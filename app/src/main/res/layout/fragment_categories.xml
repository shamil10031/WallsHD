<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shomazzapp.vavilonWalls.View.Fragments.CategoriesFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/network_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_above="@+id/textView"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/sad_smile" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:id="@+id/view" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view"
                android:gravity="center"
                android:paddingEnd="100dp"
                android:paddingStart="100dp"
                android:text="Something wrong with network connection :("
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:text=" Tap to reload!"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:visibility="visible"
            android:id="@+id/swipe_to_refresh_categories"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/categories_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0000"
                android:divider="@android:color/transparent"
                android:dividerHeight="10.0sp"
                android:padding="5dp" />

        </android.support.v4.widget.SwipeRefreshLayout>
    </FrameLayout>
</FrameLayout>
